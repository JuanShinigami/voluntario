<Page class="page"
    loaded="loaded"  
    xmlns="http://www.nativescript.org/tns.xsd">

    <Page.actionBar>
    <ActionBar>
      <ActionBar.titleView>
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="back"/>
        <GridLayout columns="*,30" rows="*">
          <Label col="0" row="0" text="{{'Detalle del simulacro - ' + folio}}" style="font-size:20;" textWrap="true" />
          <Label col="1" row="0" text="&#xE5D4;" class="font-icon image-icon-bar" tap="onOption"/>
        </GridLayout>
        
      </ActionBar.titleView>
    </ActionBar>
  </Page.actionBar>
  <ScrollView>
  <StackLayout orientation="vertical">
    <!--<TextField id="minutes" text="{{ minutes }}" hint="Minutos" keyboardType="datetime" returnKeyType="done" />-->
    
    <Label text="{{ cronometro1 }}" horizontalAlignment="center" verticalAlignment="center" class="text-crono"/>
    <Button text="Preparar simulacro" tap="start" isEnabled="{{ initial }}" class="{{classButtonPrimary}}" />
    <Button text="Estoy listo para salir" tap="evacuate" isEnabled="{{ evacuate }}" class="{{classButtonSuccess}}" />
    <Button text="Estoy a salvo" tap="stop" isEnabled="{{ end }}" class="{{classButtonInfo}}" />
    <Label text="{{ 'Participantes: ' + countVoluntary }}" horizontalAlignment="center" verticalAlignment="center" class="text-count"/>
    
    
  </StackLayout>
  </ScrollView>
</Page>