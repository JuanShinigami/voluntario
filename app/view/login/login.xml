<Page loaded="loaded" actionBarHidden="true">
  <Page.actionBar >
    <ActionBar visibility="collapse" class="action-bar">
      <ActionBar.titleView>
        <StackLayout orientation="horizontal" ios:horizontalAlignment="center" android:horizontalAlignment="center">
          <Label text="" style="font-size:22;"/>
        </StackLayout>
        
      </ActionBar.titleView>
    </ActionBar>
  
  </Page.actionBar>
  <ScrollView>
    <GridLayout columns="*" rows="auto">
    
    
      <StackLayout orientation="vertical" col="0" row="0">

        <Image src="~/images/logo.png" height="250"  horizontalAlignment="center" />
        <TextField class="input-login" id="email" text="{{ email }}" hint="Correo electrÃ³nico" keyboardType="email" returnKeyType="next" />
        <TextField class="input-login" text="{{ folio }}" hint="Folio" returnKeyType="done"  />
        <Button class="buttom-login" text="Entrar" tap="signIn" />
        <Label class="buttom-link" text="Registrate" tap="register" horizontalAlignment="center"/>
        <!--<Label class="buttom-link" text="Agregar servidor" tap="add" horizontalAlignment="center"/>-->

      </StackLayout>
    
    <ActivityIndicator busy="{{ isLoading }}" height="60" width="60"/>
  </GridLayout>
    </ScrollView>
</Page>