<Page loaded="loaded">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <ActionBar.titleView>
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="back"/>
        <StackLayout orientation="horizontal"
    ios:horizontalAlignment="center"
    android:horizontalAlignment="left">
          
          <Label text="{{ titleBar }}" style="font-size:22;" />
        </StackLayout>
      </ActionBar.titleView>
      <!--<Label text="&#xf0c0;" class="fa image-icon-bar" tap="onOption" horizontalAlignment="right" visibility="{{ enabledCreate ? 'collapse' : 'visible' }}"/>-->
      <ActionItem tap="onCreateSimulacrumGroup"  ios.systemIcon="4" android.systemIcon="ic_menu_add" visibility="{{ enabledCreate ? 'visible' : 'collapse' }}"/>
      <ActionItem text="Unirse" class="icon-join" tap="join" visibility="{{ enabledCreate ? 'collapse' : 'visible' }}"/>
    </ActionBar>
  </Page.actionBar>

  
  
  <GridLayout>
    <ListView items="{{ sismoGroupList }}" id="sismoGroupList">
      <ListView.itemTemplate>
        <GridLayout rows="auto,auto" columns="40,*,*,*,40" >
          <Label text="{{id}}" rowSpan="2" col="0" class="text-list-title" horizontalAlignment="center" verticalAlignment="center" />
          <Label text="Fecha" row="0" col="1" class="text-list-title" horizontalAlignment="center" />
          <Label text="Voluntarios" row="0" col="2" class="text-list-title" horizontalAlignment="center" />
          <Label text="DuraciÃ³n" row="0" col="3" class="text-list-title" horizontalAlignment="center" />
          <Label text="{{ fecha }}" row="1" col="1" class="text-list-title" horizontalAlignment="center" />
          <Label text="{{ voluntario }}" row="1" col="2" class="text-list-title" horizontalAlignment="center" />
          <Label text="{{ estatus }}" row="1" col="3" class="text-list-title" horizontalAlignment="center" />
          <Label text="&#xf014;" class="fa image-icon-bar" rowSpan="2" col="4" horizontalAlignment="center" verticalAlignment="center" tap="delete" />
        </GridLayout>
      </ListView.itemTemplate>
    </ListView>
    <ActivityIndicator busy="{{ isLoading }}" height="60" width="60"/>
  </GridLayout>
  

</Page>